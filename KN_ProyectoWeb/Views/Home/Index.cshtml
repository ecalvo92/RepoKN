@model KN_ProyectoWeb.Models.Usuario

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
        <div class="card">
            <div class="card-body">
                <div class="app-brand justify-content-center">
                    <a href="index.html" class="app-brand-link gap-2">
                        <img src="~/StaticFiles/img/logo.png">                        
                        <span class="app-brand-text demo text-body fw-bolder">Inciar Sesión</span>
                    </a>
                </div>              

                @using(Html.BeginForm("Index", "Home"))
                {                     
                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        @Html.TextBoxFor(x => x.CorreoElectronico, new { @class="form-control" })
                    </div>

                    <div class="mb-3 form-password-toggle">
                        <div class="d-flex justify-content-between">
                            <label class="form-label" for="password">Contraseña</label>
                            <a href="@Url.Action("RecuperarAcceso","Home")">
                                <small>Olvidó su contraseña?</small>
                            </a>
                        </div>
                        <div class="input-group input-group-merge">
                            @Html.TextBoxFor(x => x.Contrasenna, new { @class = "form-control", @type= "password" })
                            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary d-grid w-100" type="submit">Procesar</button>
                    </div>
                }

                <p class="text-center">
                    <span>Nuevo en nuestra plataforma?</span>
                    <a href="@Url.Action("Registro","Home")">
                        <span>Crear una cuenta</span>
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>