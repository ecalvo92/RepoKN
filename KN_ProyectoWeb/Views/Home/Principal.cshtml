@model List<KN_ProyectoWeb.Models.Producto>

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="col-12">
    <div class="row g-4">

        @if (ViewBag.Mensaje != null)
        {
            <div class="alert alert-primary text-center">
                @ViewBag.Mensaje
            </div>
        }

        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card h-100 shadow-sm border-0">
                    <img src="@item.Imagen" class="card-img-top mt-3" alt="@item.Nombre" style="height:180px; object-fit:contain;">

                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title mb-1">@item.Nombre</h6>
                        <p class="mb-1 text-muted">@item.NombreCategoria</p>
                        <p class="fw-bold mb-2">$ @item.Precio.ToString("N2")</p>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <small class="text-muted">Disponibles:</small>
                            <span class="fw-semibold @(item.Cantidad > 0 ? "text-success" : "text-danger")">
                                @item.Cantidad
                            </span>
                        </div>

                        <div class="mt-auto">
                            <div class="d-flex justify-content-center align-items-center mt-auto">
                                @using (Html.BeginForm("AgregarProductoCarrito", "Home", FormMethod.Post, new { @id = "FormPrincipal", @class = "d-flex align-items-center" }))
                                {
                                    <input type="hidden" id="ConsecutivoProducto" name="ConsecutivoProducto" value=@item.ConsecutivoProducto>

                                    @Html.TextBox("Cantidad", 1, new { @class = "form-control form-control-sm text-center me-2", style = "width:60px;" })

                                    <button type="submit" class="btn btn-outline-primary btn-sm">
                                        <i class="fa fa-cart-plus me-1"></i> Agregar
                                    </button>
                                    }
                                </div>

                        </div>

                    </div>
                </div>
            </div>
        }

    </div>
</div>

<script src="~/StaticFiles/js/Principal.js"></script>
