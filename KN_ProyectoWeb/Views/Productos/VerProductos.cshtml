@model List<KN_ProyectoWeb.Models.Producto>

@{
    Layout = "~/Views/Shared/_LayoutInterno.cshtml";
}

<div class="col-12">
    <div class="card overflow-hidden">

        <div class="d-flex align-items-center">
            <h5 class="card-header mb-0">Productos</h5>
            <a href="@Url.Action("AgregarProductos","Productos")" class="btn btn-outline-primary">+ Agregar</a>
        </div>

        <div class="card-body ps ps--active-x ps--active-y">

            <table id="tProductos" class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Categoría</th>
                        <th>Estado</th>
                        <th>Imagen</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ConsecutivoProducto</td>
                            <td>@item.Nombre</td>
                            <td>$ @item.Precio.ToString("N2")</td>
                            <td>@item.Cantidad</td>
                            <td>@item.NombreCategoria</td>
                            <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                            <td class="text-center"><img src="@item.Imagen" width="110" height="75"></td>
                            <td>
                                <a href="@Url.Action("ActualizarProductos","Productos", new { q = item.ConsecutivoProducto })" style="margin-right:10px;">
                                    <i class="fa fa-edit" style="font-size:20px;"></i>
                                </a>

                                <a href="@Url.Action("ActualizarEstadoProducto", "Productos", new { q = item.ConsecutivoProducto })">
                                    <i class="fa @(item.Estado ? "fa-toggle-on text-success" : "fa-toggle-off text-danger")" style="font-size:22px;"></i>
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
</div>

<script src="~/StaticFiles/js/VerProductos.js"></script>